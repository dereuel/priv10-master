<UserControl x:Class="PrivateWin10.Controls.PresetTweaks"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrivateWin10.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Name="groupName" >tweak</Label>
        <ScrollViewer Name="itemScroll" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="LightGray">
            <Grid Margin="0,5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Name="itemGrid">

            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
